{
  "name": "storybook-host",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/storybook/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "storybook": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "port": 4400,
        "configDir": "apps/storybook/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@nx/storybook:build",
      "outputs": ["{options.outputDir}"],
      "options": {
        "outputDir": "dist/storybook/storybook-host",
        "configDir": "apps/storybook/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "test-storybook": {
      "executor": "nx:run-commands",
      "options": {
        "command": "test-storybook -c apps/storybook/.storybook --url=http://localhost:4400"
      }
    },
    "test-storybook-ci": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run storybook-host:storybook & STORYBOOK_PID=$!",
          "wait-on http://localhost:4400",
          "nx run storybook-host:test-storybook",
          "if ps -p $STORYBOOK_PID > /dev/null; then kill $STORYBOOK_PID; else echo 'Storybook process $STORYBOOK_PID does not exist.'; fi"
        ],
        "parallel": false
      }
    }
  }
}
